<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stephan.quizz.invitescreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose opponent"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etsearchplayer"
        android:layout_alignEnd="@+id/etsearchplayer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etsearchplayer"
        android:hint="Search for player"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose theme"
        android:id="@+id/textView"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/etsearchplayer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etsearchplayer"
        android:layout_alignEnd="@+id/etsearchplayer" />

    <ImageButton
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:id="@+id/bmath"
        android:background="@drawable/pi_symbol"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/bprogramming"
        android:layout_alignEnd="@+id/bprogramming" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="math"
        android:id="@+id/textView3"
        android:layout_below="@+id/bmath"
        android:layout_alignLeft="@+id/bmath"
        android:layout_alignStart="@+id/bmath" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/bdigital"
        android:background="@drawable/digital"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignBottom="@+id/bmath"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital-communication"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/bdigital"
        android:layout_alignStart="@+id/bdigital"
        android:layout_alignBottom="@+id/textView3" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/bprogramming"
        android:background="@drawable/java"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming"
        android:id="@+id/textView5"
        android:layout_below="@+id/bprogramming"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/bteledata"
        android:background="@drawable/telemast"
        android:layout_alignTop="@+id/bprogramming"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tele-data net"
        android:id="@+id/textView6"
        android:layout_below="@+id/bteledata"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>
