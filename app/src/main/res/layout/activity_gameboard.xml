<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stephan.quizz.gameboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/etQuestion"
        android:layout_above="@+id/bAnswer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bAnswer2"
        android:layout_alignEnd="@+id/bAnswer2"
        android:text="Spørgsmål"
        android:gravity="center"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:text="Svar-mulighed"
        android:id="@+id/bAnswer1"
        android:layout_above="@+id/bAnswer3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:text="Svar-mulighed"
        android:id="@+id/bAnswer2"
        android:layout_above="@+id/bAnswer4"
        android:layout_alignLeft="@+id/bAnswer4"
        android:layout_alignStart="@+id/bAnswer4" />

    <Button
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:text="Svar-mulighed"
        android:id="@+id/bAnswer3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:text="Svar-mulighed"
        android:id="@+id/bAnswer4"
        android:layout_alignBottom="@+id/bAnswer3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/score1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/etQuestion"
        android:gravity="center"
        android:textSize="70sp"
        android:layout_alignRight="@+id/bAnswer1"
        android:layout_alignEnd="@+id/bAnswer1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/score2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/score1"
        android:gravity="center"
        android:textSize="70sp"
        android:layout_alignLeft="@+id/bAnswer2"
        android:layout_alignStart="@+id/bAnswer2" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=":"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textSize="70sp"
        android:layout_alignTop="@+id/score1"
        android:layout_toRightOf="@+id/score1"
        android:layout_toLeftOf="@+id/score2"
        android:layout_toStartOf="@+id/score2"
        android:layout_above="@+id/etQuestion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/etTimer"
        android:layout_below="@+id/bAnswer4"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_alignRight="@+id/bAnswer4"
        android:layout_alignEnd="@+id/bAnswer4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player 1"
        android:id="@+id/Player1"
        android:gravity="center"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/score1"
        android:layout_alignEnd="@+id/score1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player 2"
        android:id="@+id/Player2"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/score2"
        android:layout_alignStart="@+id/score2"
        android:layout_alignBottom="@+id/Player1" />

</RelativeLayout>
